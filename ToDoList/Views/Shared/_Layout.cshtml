<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <title>My ToDo List</title>

    <style>
        .navbar {
            background-color: transparent;
        }

        .navbar-brand {
            font-family: "Pacifico", cursive;
            font-weight: 400;
            font-style: normal;
            font-size: 35px !important;
        }
    </style>
</head>
<body>

    <nav id="nav-bar" class="navbar navbar-expand-md navbar-light container">
        <a class="navbar-brand mx-auto">Things To Do</a>
        @if (HttpContext.Current.Session["UserID"] != null)
        {
            <form class="form-inline my-2 my-lg-0" action="@Url.Action("Logout", "Users")" method="post">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Logout</button>
            </form>
        }
        else
        {
            <form class="form-inline my-2 my-lg-0" action="@Url.Action("Login", "Users")" method="get">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Login</button>
            </form>
        }
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
